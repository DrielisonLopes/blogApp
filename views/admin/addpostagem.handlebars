<div class="card">
    <div class="card-body">
        <h4>Nova Postagem</h4>
        <form action="">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" class="form-control">
            <label for="slug">Slug</label>
            <input type="text" name="slug" class="form-control" value="">
            <label for="descicao">Descrição</label>
            <input type="text" name="descicao" class="form-control" value="">
            <label for="conteuno">Conteúdo</label>
            <textarea name="conteudo" class="form-control"></textarea>
            <label for="categoria">Categoria</label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <br><br>
            <button class="btn btn-success"type="submit">Criar postagem</button>
        </form>
    </div>
</div>