{{#each}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4>
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}">
            <label for="slug">Slug</label>
            <input type="text" name="slug" class="form-control" value="{{postagem.slug}}">
            <label for="descicao">Descrição</label>
            <input type="text" name="descicao" class="form-control" value="{{postagem.descricao}}">
            <label for="conteuno">Conteúdo</label>
            <textarea name="conteudo" class="form-control" {{postagem.conteudo}}></textarea>
            <label for="categoria">Categoria</label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <br><br>
            <button class="btn btn-success"type="submit">Editar postagem</button>
        </form>
    </div>
</div>